{
    "name": "mongo",
    "container": {
        "image": "mongo",
        "tag": "latest",
        "command": [],
        "arguments": []
    },
    "resources": {
        "cpu": 1,
        "memory": "512Mi",
        "ephemeralStorage": "10Gi",
        "storage": [
            {
                "name": "mongo-storage",
                "size": "10Gi",
                "persistent": true,
                "class": "beta3",
                "mount": "/data/db"
            }
        ]
    },
    "ports": [
        {
            "container": 27017,
            "external": 27017,
            "protocol": "tcp"
        }
    ],
    "env": [
        {
            "name": "MONGO_INITDB_ROOT_USERNAME",
            "value": "root"
        },
        {
            "name": "MONGO_INITDB_ROOT_PASSWORD",
            "value": "example"
        }
    ],
    "metadata": {
        "version": "1.0.0",
        "tags": ["database", "mongo"],
        "description": "MongoDB is a general purpose, document-based, distributed database built for modern application developers and for the cloud era."
    }
}
