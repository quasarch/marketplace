{
    "version": "1.0.0",
    "name": "postgres",
    "container": {
        "image": "postgres",
        "tag": "latest",
        "command": [],
        "arguments": []
    },
    "resources": {
        "cpu": 1,
        "memory": "1Gi",
        "ephemeralStorage": "1Gi",
        "storage": [
            {
                "name": "data",
                "size": "10Gi",
                "persistent": true,
                "class": "beta3"
            }
        ]
    },
    "ports": [
        {
            "container": 5432,
            "external": 5432,
            "protocol": "udp"
        }
    ],
    "env": [
        {
            "name": "PGDATA",
            "value": "/var/lib/postgresql/data/pgdata"
        },
        {
            "name": "POSTGRES_USER",
            "value": "admin"
        },
        {
            "name": "POSTGRES_PASSWORD",
            "value": "admin123"
        },
        {
            "name": "POSTGRES_DB",
            "value": "database"
        }
    ],
    "metadata": {
        "version": "1.0.0",
        "tags": ["database"],
        "description": "PostgreSQL is a powerful, open source object-relational database system with over 35 years of active development that has earned it a strong reputation for reliability, feature robustness, and performance."
    }
}
